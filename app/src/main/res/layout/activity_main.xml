<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_activity_alert_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Alert Dialog"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_header" />

    <TextView
        android:id="@+id/main_activity_success_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Success Dialog"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main_activity_alert_dialog_button"
        app:layout_constraintStart_toStartOf="@+id/main_activity_alert_dialog_button"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_alert_dialog_button" />

    <TextView
        android:id="@+id/main_activity_custom_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Custom Dialog"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main_activity_success_dialog_button"
        app:layout_constraintStart_toStartOf="@+id/main_activity_success_dialog_button"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_success_dialog_button" />

    <TextView
        android:id="@+id/activity_main_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bangers"
        android:text="Beautify Dialog"
        android:textColor="@color/alert_button_background"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_activity_alert_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Try Me"
        app:backgroundTint="@color/alert_button_background"
        app:layout_constraintEnd_toEndOf="@+id/main_activity_alert_header_text_view"
        app:layout_constraintStart_toStartOf="@+id/main_activity_alert_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_alert_header_text_view" />

    <Button
        android:id="@+id/main_activity_success_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Try Me"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="@+id/main_activity_success_header_text_view"
        app:layout_constraintStart_toStartOf="@+id/main_activity_success_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_success_header_text_view" />

    <Button
        android:id="@+id/main_activity_custom_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Try Me"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="@+id/main_activity_custom_header_text_view"
        app:layout_constraintStart_toStartOf="@+id/main_activity_custom_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_custom_header_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>